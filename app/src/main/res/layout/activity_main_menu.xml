<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reaction_timer_button_message"
        android:id="@+id/reaction_timer_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="startReactionTimer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_show_buzzer_button_message"
        android:id="@+id/game_show_buzzer_button"
        android:layout_below="@+id/reaction_timer_button"
        android:layout_centerHorizontal="true"
        android:onClick="startGameShowBuzzer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_button_message"
        android:id="@+id/statistics_button"
        android:layout_below="@+id/game_show_buzzer_button"
        android:layout_centerHorizontal="true"
        android:onClick="startStatistics" />
</RelativeLayout>
